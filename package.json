{
  "name": "pokemon-gen3-calc-mcp",
  "version": "1.0.0",
  "description": "Pokemon Generation 3 damage and status calculator MCP server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsx scripts/build.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "tsx scripts/integration-test.ts",
    "lint": "biome check .",
    "format": "biome check --write .",
    "check": "run-p check:*",
    "check:type": "npm run typecheck",
    "check:lint": "npm run lint",
    "check:test": "npm run test",
    "schemagen": "tsx scripts/generateSchemas.ts"
  },
  "author": "ptrst102",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.5",
    "npm-run-all2": "^8.0.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-language-server": "^4.3.4",
    "vitest": "^3.2.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "zod": "^3.25.67"
  },
  "volta": {
    "node": "22.17.0"
  }
}
